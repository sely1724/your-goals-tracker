<section
  class="user-card-wrapper"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="100"
    height="100"
    fill="currentColor"
    class="bi bi-person-circle"
    viewBox="0 0 16 16"
  >
    <path
      d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"
    ></path>
    <path
      fill-rule="evenodd"
      d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
    ></path>
  </svg>

  <div class="card">
    <div class="card-header">
      <h3
      >{{goal.User.username}}</h3>
    </div>

    <div class="card-body">
      <blockquote
        class="blockquote mb-0"
      >
        <p>This is my Goal:
          {{goal.content}}
        </p>
        <form
          class="create-post comment-form"
        >
        <div class="form-group" >
          <input id="user-comment" for="comment" type="text" placeholder="Add a comment" aria-label="Add a comment" > 
          {{!-- required style="box-shadow: none" --}}
          {{#if loggedIn}}
          <button type="submit" data-post-id={{goal.id}}>Submit</button>
          {{/if}}
          </div>
        </form>
      </blockquote>
    </div>
  </div>
</section>

<section>
  <div
    class="comment-card-wrapper"
  >
    {{#each
      goal.Comments
      as |comment|
    }}
      <div
        class="comment-card"
      >
        <div class="comment-card-body">
          <h3>{{comment.User.username}}</h3>
          <blockquote
            class="blockquote mb-0"
          >

            <p
            >{{comment.content}}</p>
            {{#if (ifUserId ../userId comment.User.id)}}
   <button type="button" class="js-delete-btn" data-id="{{comment.id}}">Delete</button>

            {{/if}}
          </blockquote>
        </div>
      </div>
    {{/each}}
  </div>
</section>

<script
  src="/js/comment.js"
></script>